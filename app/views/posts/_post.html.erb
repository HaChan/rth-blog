<div class="card mb-4">
  <div class="card-body">
    <h2 class="card-title"><%= post.title %></h2>
    <p class="card-text"><%= post.shorten_body %></p>
    <%= link_to "Read More", post_path(post), class: "btn btn-primary" %>
  </div>
  <div class="card-footer text-muted">
    Posted on <%= post.created_as_word %> by
    <a href="#"><%= post.user_email %></a>
  </div>
</div>
